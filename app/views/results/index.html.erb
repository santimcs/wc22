<% content_for :title, 'Results' %>

<div class ="page-header text-center" > 
  <h1>Results</h1>
</div>

<table id="results" class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Date</th>     
      <th>Home</th>      
      <th></th>
      <th></th>      
      <th>Away</th>    
      <th><span class="glyphicon glyphicon-search" aria-hidden="true"></span></th>
      <th><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |result| %>
      <tr>
        <td><%= result.fixture.date.strftime("%A, %b %d") %></td>   
       
        <td><%= result.fixture.home.name %></td>
      
        <td><span class="badge"><%= result.home_goals %></span></td>             
        <td><span class="badge"><%= result.away_goals %></span></td>
      
        <td><%= result.fixture.away.name %></td>
        <td><%= link_to_icon 'Show', result %></td>
        <td><%= link_to_icon 'Destroy', result, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       
      </tr>
    <% end %>
  </tbody>
</table>

