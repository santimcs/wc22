<p id="no<p id="notice"><%= notice %></p>

<p>
  <strong>Fixture:</strong>
  <%= @result.fixture.date.strftime("%A, %B %d") %>
</p>
<!-- start of row -->
<div class="row">
  <label class="control-label col-xs-2">

      <%= @result.fixture.home.name %>

  </label>
  <div class="col-xs-3">
    <%= image_tag @result.fixture.home.flag, width: "100", height: "50" %>
  </div>
  <div class="col-xs-1 badge">
      <%= @result.home_goals %>
  </div>
  <div class="col-xs-1 badge">
      <%= @result.away_goals %>
  </div>
  <div class="col-xs-2">
    <%= image_tag @result.fixture.away.flag, width: "100", height: "50" %>
  </div>
  <label class="control-label col-xs-3">
      <%= @result.fixture.away.name %>
  </label>    
</div>
<br/>
<div class="row">
  <div class="col-xs-4">
    <%= link_to 'Edit', edit_result_path(@result),
    :class => "btn btn-warning btn-lg" %>
  </div> 
  <div class="col-xs-4">  
    <%= link_to 'Back', results_path,
    :class => "btn btn-info btn-lg" %>
  </div> 
  <div class="col-xs-4">  
    <%= link_to 'Fixtures', fixtures_path,
    :class => "btn btn-danger btn-lg active" %>
  </div>   
</div>
