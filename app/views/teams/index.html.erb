<p id="notice"><%= notice %></p>
<% content_for :title, 'Teams' %>

<h1>Teams</h1>
<table id="teams" class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Group</th>
      <th>Flag</th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <% team_name = team.name %>
        <% if team_name == 'Korea Republic' %>
        <%    team_name = 'South Korea' %>
        <% end %>
        <% squads='https://en.m.wikipedia.org/wiki/2018_FIFA_World_Cup_squads#'+CGI.escape(team_name.tr(' ','_')) %>
        <td><%= link_to(team.name, squads, :target => "_blank") %></td>

        <td><%= team.group %></td>
        <td><%= image_tag team.flag, width: "70", height: "35" %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
